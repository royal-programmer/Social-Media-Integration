<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E8EA">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blurry"/>


        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="150dp"
            app:neumorph_backgroundColor="#2B76B1"
            app:neumorph_shapeType="flat">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:neumorph_backgroundColor="@color/light_background"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_facebook"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp" />

                    <soup.neumorphism.NeumorphTextView
                        android:id="@+id/name_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Name"
                        android:textSize="35sp"
                        app:neumorph_shadowColorLight="@color/light_background"
                        app:neumorph_shadowElevation="8dp" />

                    <soup.neumorphism.NeumorphTextView
                        android:id="@+id/email_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:hint="email@gmail.com"
                        android:textSize="15sp"
                        app:neumorph_shadowColorLight="@color/light_background"
                        app:neumorph_shadowElevation="8dp" />

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/signOut_btn_facebook"
                        style="@style/Widget.Neumorph.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="50dp"
                        android:drawableStart="@drawable/facebook_25px"
                        android:fontFamily="serif"
                        android:text="Sign Out"
                        android:textStyle="bold"
                        app:neumorph_shadowElevation="2dp" />


                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

        </soup.neumorphism.NeumorphCardView>

</RelativeLayout>